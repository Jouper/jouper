		</index>
	</table>

	<!--
	 *
	 * TABLE comments
	 *
	 -->
	<table name="comments">
		<field name="comment_id" type="I8">
			<KEY />
			<AUTOINCREMENT/>
		</field>
		<field name="article_id" type="I8">
			<NOTNULL/>
		</field>
		<field name="parent_comment_id" type="I8"/>
		<field name="num_children" type="I4">
			<NOTNULL/>
			<DEFAULT VALUE="0"/>
		</field>
		<field name="user_id" type="I8"/>
